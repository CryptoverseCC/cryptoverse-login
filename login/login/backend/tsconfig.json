{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./build/",
    //"noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["ES2020", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
}
